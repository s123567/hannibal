
<div class="modal fade show-quotes-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <br>
      <% @user_quotes.each do |q| %>
        <li class="user-quote"><%= q.content %> from me (<%= q.user_id %>)</li>
          <% if q.user == current_user %>
            <li><%= link_to "X", quote_path(q), method: :delete %></li>
          <% end %>
          <hr>
      <% end %>      
    </div>
  </div>
</div>

