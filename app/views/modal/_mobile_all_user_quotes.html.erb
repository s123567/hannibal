
<div class="modal fade mobile-all-user-quotes" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content list-quotes">
      <% @user_quotes.each do |q| %>
            <li class="text-center mobile-modal-quote">"<%= q.content %>"</li>
            <% if q.user == current_user %>
              <li class='mobile-modal-info text-center'><p><%= link_to '<i class="fa fa-times" aria-hidden="true"></i>'.html_safe, quote_path(q),class:'delete', method: :delete %></p>
              </li>
            <% end %>
            <hr class='hr-red'>
          <% end %> <!-- @user_quotes -->
    </div>
  </div>
</div>
